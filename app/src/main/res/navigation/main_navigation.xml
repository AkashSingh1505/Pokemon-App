<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/pokemonListFrag">

    <fragment
        android:id="@+id/pokemonListFrag"
        android:name="com.example.pokemon_app.ui.PokemonListFrag"
        android:label="fragment_pokemon_list"
        tools:layout="@layout/fragment_pokemon_list" >
        <action
            android:id="@+id/action_pokemonListFrag_to_pokemonDetailsFrag"
            app:destination="@id/pokemonDetailsFrag" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailsFrag"
        android:name="com.example.pokemon_app.ui.PokemonDetailsFrag"
        android:label="fragment_pokemon_details"
        tools:layout="@layout/fragment_pokemon_details" />
</navigation>